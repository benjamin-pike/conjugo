generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  username       String           @unique
  email          String           @unique
  password       String
  dob            DateTime
  createdAt      DateTime         @default(now())
  lastLogin      DateTime         @default(now())
  fname          String
  image          String
  lname          String
  practiceConfig PracticeConfig[]
  RefreshTokens  RefreshToken[]
  SavedVerbs     SavedVerbs?
  XP             xp?
  UserProgress   UserProgress[]
}

model RefreshToken {
  id     String   @id
  exp    DateTime
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SavedVerbs {
  id         String   @id @default(cuid())
  spanish    String[] @default([])
  french     String[] @default([])
  german     String[] @default([])
  italian    String[] @default([])
  portuguese String[] @default([])
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PracticeConfig {
  id       String   @id @default(cuid())
  language String
  subjects String[]
  verbs    Int      @default(20)
  target   Int      @default(10)
  time     Int      @default(120)
  userId   String
  tenses   String[]
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, language])
  @@index([userId])
}

model Verb {
  id           String @id(map: "VerbCorpus_pkey") @default(cuid())
  language     String
  infinitive   String
  rank         Int
  regularity   String
  translations Json
  conjugations Json
  participles  Json

  @@unique([language, infinitive])
  @@unique([language, rank])
  @@index([language, infinitive])
}

model xp {
  id         String @id @default(cuid())
  spanish    Int    @default(0)
  french     Int    @default(0)
  german     Int    @default(0)
  italian    Int    @default(0)
  portuguese Int    @default(0)
  userId     String @unique
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserProgress {
  id         String @id @default(cuid())
  language   String
  knownVerbs Int    @default(3)
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String

  @@unique([userId, language])
  @@index([userId])
}